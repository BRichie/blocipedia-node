<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <main class="container">
        <% include ../static/partials/navbar.ejs %>

        <% include ../static/partials/messages.ejs %>


     <h1 class="page-header">Private Wikis</h1>


     <%  if(currentUser && currentUser.role !== "standard") { %>
        <a href="/wikis/new" class="btn btn-success">Create Private Wiki</a>
        <% } %>
        <hr>

        <ul class="list-group">
            <% wikis.forEach((wiki) => { %>
            <% if(wiki.private === true && wiki.userId === currentUser.id) { %>
            <br>
            <li class="list-group-item">
                <a href="/wikis/<%= wiki.id %>">
                    <%= wiki.title %> </a>
            </li>
            <% } %>
            <% }) %>
        </ul>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
</body>

</html>